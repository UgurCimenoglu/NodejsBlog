<section class="page-image page-image-about md-padding">
	<h1 class="text-white text-center">CATEGORY</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
	<div class="container">
		{{>admin-nav}}
		<div class="clearfix"></div>
		<div class="mb-5"></div>
		<div class="row">
			<div class="col-md-4">
				<form action="" enctype='multipart/form-data' method="POST">
					<div class="row">
						<div class="col-md-10">
							<div class="form-group">
								<input class="form-control" name="name" type="text" placeholder="Post Title *"
									required="required" data-validation-required-message="Please enter your Username.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12">
							<div id="success"></div>
							<button class="main-btn" style="margin-left: 0;" type="submit">Add Category</button>
						</div>
					</div>
				</form>
			</div>
			<div class="col-md-7">
				
				<table class="table">
					<thead>
						<tr>
							<th>ID</th>
							<th>CATEGORY</th>
							<th>DELETE</th>
						</tr>
					</thead>
					 
					<tbody>
						{{#each categories}}
						<tr>
							<th>{{id}}</th>
							<th>{{name}}</th>
							<th>
								<form action="/admin/categories/{{id}}?_method=DELETE" method="POST">
									<input type="hidden" name="_method" value=",DELETE">
									<button type="submit" class="btn btn-danger">DELETE</button>
								</form>

							</th>
						</tr>
						{{/each}}
					</tbody>
					
				</table>
				
			</div>
		</div>
	</div>
</section>